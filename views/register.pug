doctype html
html
  head
    title Register
  body
    if error
      p(style='color:red') #{error}
    form(action='/auth/register' method='POST')
      label Email: 
      input(type='email' name='email')
      br
      label Name: 
      input(type='text' name='name')
      br
      label Password: 
      input(type='password' name='password')
      br
      button(type='submit') Register
